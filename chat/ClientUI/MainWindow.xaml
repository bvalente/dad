<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Chat.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ClientUI.MainWindow"
        Title="ClientUI">

    <StackPanel Orientation="Vertical" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center" 
                Width="300">
        <TextBlock Name="ServerBlock" Text="server is offline"/>
        <TextBox Name="PortBox" Text="808x" />
        <TextBox Name="NickBox"  />
        <Button Name ="ConnectButton" Content="Connect" Click="Connect" IsEnabled="true"/>

        <TextBlock Name="ChatBlock" Height="200"/>
        <TextBox Name="MessageBox"  />
        <Button Name ="SendButton" Content="Send" IsEnabled="true"/>
    </StackPanel>

</Window>
