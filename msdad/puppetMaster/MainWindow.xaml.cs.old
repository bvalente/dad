<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="puppetMaster.MainWindow"
        Title="puppetMaster">
    <DockPanel Name="WindowPanel">  <!--window panel-->

        <!--PCS PANEL-->
        <StackPanel DockPanel.Dock="Top" Name="PcsPanel" Height="300">
                    
        <!--IP PANEL-->
            <StackPanel DockPanel.Dock="Bottom" >
                <TextBox Name="PcsIp"/>
                <Button Content="connect"/>
                <Button Content="create client"/>
                <Button Content="create server"/>
            </StackPanel>


        </StackPanel>

        <!--Client PANEL-->
        <StackPanel DockPanel.Dock="Center" Name="ClientPanel" Height="300">

            <DropDown SelectedIndex="0">
                <DropDownItem Content="Cliente 1"/>
                <DropDownItem Content="Cliente 2"/>
                <DropDownItem Content="Cliente 3"/>
            </DropDown>

        </StackPanel>

        <!--Server PANEL-->
        <StackPanel DockPanel.Dock="Bottom" Name="ServerPanel" Height="300">
            <TextBlock Content="Hello there" />
        </StackPanel>

    </DockPanel> <!--window panel-->
</Window>
